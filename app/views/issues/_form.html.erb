<%= form_for @issue, :url => issues_path, :html => { :multipart => true } do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :publication %><br />
    <%= f.select(:publication, 
        options_from_collection_for_select(@publications, 'abbreviation', 'name')) %>
  </div>
  <div class="field">
    <%= f.label :issue_number %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :asset %><br />
    <%= f.file_field :asset %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
