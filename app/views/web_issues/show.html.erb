<p id="notice"><%= notice %></p>

<p>
  <b>Publication:</b>
  <%= @web_issue.publication %>
</p>

<p>
  <b>Name:</b>
  <%= @web_issue.name %>
</p>

<p>
	<%= link_to 'Issue XML archive', @web_issue.asset.url %>
</p>
<%= form_for @web_issue, :url => { :action => 'xml_rpc', :id => @web_issue.id }, :id => 'xml_rpc' do |f| %>
<div class="field">
URL<br />
    <%= select_tag(:wordpress_url, 
        options_from_collection_for_select(@publications, 'url', 'url')) %>
</div>
<div class="field">
Login<br />
<%= text_field_tag :login_name %>
</div>
<div class="field">
PW<br />
<%= password_field_tag :access_pw %>
</div>
<div class='field'>
<%= hidden_field_tag :id, @web_issue.id %>
</div>
<div class="actions">
    <%= f.submit 'Add stories to wordpress' %>
  </div>
<% end %>


<%= link_to 'Edit', edit_web_issue_path(@web_issue) %> |
<%= link_to 'Back', web_issues_path %>
